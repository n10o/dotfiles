" (Win) C:\Program Files (x86)\_vimperatorrc (C:\Users\<username>\_vimperatorrc)
" (Mac) ~/.vimperatorrc

" disable auto focus form
set focuscontent
set wildmode=list:full
set complete=sl
set hintchars=hjklasdfgyuiopqwertnmzxcvb
" ignorekeys setting kills 'open label' shortcut. RIP
ignorekeys add mail\\.google\\.com -except <C-p>,<C-n>,h,l,:
" ignorekeys add mail\\.google\\.com

noremap l <C-n>
noremap h <C-p>
noremap j 5<C-e>
noremap k 5<C-y>
noremap <C-Right> :tabmove! +1<CR>
noremap <C-Left> :tabmove! -1<CR>
